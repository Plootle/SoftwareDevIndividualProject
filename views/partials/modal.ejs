<a href="#myModal${0}" class="btn btn-info" data-toggle="modal" >Add Review</a>
<!-- Modal HTML -->
<div id="myModal${0}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/home/add_reviews" method="post">
                <div class="modal-header">
                    <div class="avatar">
                        <img src="https://www.tutorialrepublic.com/examples/images/avatar.png" alt="Avatar">
                    </div>
                    <h4 class="modal-title">Write A Review</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="showName">Show Name</label>
                        <input class="form-control" name="showName" id="showName"${item[0].show.name}</input>
                    </div>
                    <div class="form-group">
                        <label for="showReview">Review</label>
                        <textarea class="form-control" type="text" name="showReview" placeholder="Enter review here" rows="6"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>