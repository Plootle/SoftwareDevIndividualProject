<%-include('../partials/header') %> 
<%-include('../partials/menu') %>

<form class="d-flex" action = "/revFilter" method = "GET" >
    <input class="form-control me-2" name = "getFilter" type="search" placeholder="Search" aria-label="Search" id="getFilter">
    <button class="btn btn-outline-success" type="submit" id="sbutton" >Submit</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Show</th>
            <th>review</th>
            <th>Review Date</th>
        </tr>
    </thead>
    <tbody>
        <% if(showTable){ 
            var card='' ; 
            showTable.forEach(function(item){ 
                card +='<tr>' ; 
                card +='<td>' +item.show + '</td>'; 
                card +='<td>' + item.review + '</td>';
                card +='<td>' +item.revdate + '</td>'; 
                card +='</tr>'; 
            }); %>
            <%- card %>
        <% } %>

    </tbody>


</table>

<%-include('../partials/footer')%>